<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="grupo9.arquisoft.migrainetrackingmobile.MenuPrincipalActivity">

    <Button android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/registrarEpisodioButton"
        android:onClick="registrarEpisodio"
    />
    <Button android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/grabarEpisodioButton"
        android:onClick="grabarEpisodio"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/escucharGrabacionesButton"
        android:onClick="escucharGrabaciones"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/registrarMedicamentoButton"
        android:onClick="agregarMedicamento"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/registrarHabitoButton"
        android:onClick="agregarHabito"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/verAnalisisButton"
        android:onClick="verAnalisis"/>

</RelativeLayout>
