<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:text="Ver Pacientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el ID de un episodio"
        android:id="@+id/cedula" />

    <Button
        android:text="Buscar Episodios Por CÃ©dula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="verEpisodios"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha 1"
                android:onClick="showDatePickerDialog"
                android:layout_column="4" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha 2"
                android:onClick="showDatePickerDialog"
                android:layout_gravity="center_horizontal"
                android:layout_column="5" />
        </TableRow>
    </TableLayout>

    <Button
        android:text="Episodios entre fechas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>