<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="grupo9.arquisoft.migrainetrackingmobile.MenuDoctorActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/bienvenido_label"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_doctor_colegas_button"
        android:id="@+id/colegas_button"
        android:layout_below="@+id/bienvenido_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="verColegas"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_doctor_episodios_button"
        android:id="@+id/episodios_button"
        android:layout_below="@+id/colegas_button"
        android:layout_centerHorizontal="true"
        android:onClick="verEpisodiosPaciente"/>

</RelativeLayout>
